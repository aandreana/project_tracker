<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.full_name, user %>
  <!-- If the current_user is an admin and don't show for the current user -->
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "delete", user, method: :delete,
                                data: { confirm: "User #{user.full_name} is going to be deleted.  Are you sure?"} %>
  <% end %>
</li>
